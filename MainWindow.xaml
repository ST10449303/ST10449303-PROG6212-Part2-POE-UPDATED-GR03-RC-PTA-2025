<Window x:Class="ContractMonthlyClaimSystemPart1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contract Monthly Claim System"
        Height="450" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#E5F1FF">

    <Grid>
        
        <Border CornerRadius="20" Background="White" Padding="30" Margin="40" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Effect="{DynamicResource DropShadowEffect}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
                <TextBlock Text="CMCS" FontSize="36" FontWeight="Bold" Foreground="#1D4ED8" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Contract Monthly Claim System" FontSize="16" Foreground="#1E40AF" HorizontalAlignment="Center" Margin="0,0,0,30"/>

               
                <Button Content="Lecturer Portal" Height="50" Margin="0,8" Background="#1D4ED8" Foreground="White" FontWeight="Bold" Click="Lecturer_Click"/>
                <Button Content="Coordinator Portal" Height="50" Margin="0,8" Background="#2563EB" Foreground="White" FontWeight="Bold" Click="Coordinator_Click"/>
                <Button Content="Academic Manager Portal" Height="50" Margin="0,8" Background="#3B82F6" Foreground="White" FontWeight="Bold" Click="Manager_Click"/>
                <Separator Margin="0,20"/>
                <Button Content="Exit" Height="45" Background="#EF4444" Foreground="White" FontWeight="Bold" Click="Exit_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
