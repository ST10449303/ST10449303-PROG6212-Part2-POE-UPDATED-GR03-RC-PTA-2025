<Window x:Class="ContractMonthlyClaimSystemPart1.LecturerPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:ContractMonthlyClaimSystemPart1.Converters"
        Title="Lecturer Portal" Height="650" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F2F4F8" ResizeMode="NoResize">

    <Window.Resources>
        <conv:StatusToProgressConverter x:Key="StatusToProgressConverter"/>
    </Window.Resources>

    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,-16">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

         
            <Border Grid.Row="0" Background="#4F46E5" Padding="12" CornerRadius="10">
                <TextBlock Text="Lecturer — Submit Claim" FontSize="20" FontWeight="Bold" Foreground="White"/>
            </Border>

           
            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="12" Margin="0,12,0,12">
                <StackPanel Orientation="Vertical">
                    <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,10">
                    
                        <StackPanel Width="360" Margin="0,0,12,0">
                            <TextBlock Text="Lecturer Name" FontWeight="SemiBold" FontSize="14"/>
                            <TextBox x:Name="txtLecturerName" Height="30" Margin="0,6,0,12" Padding="6" Background="#FAFAFA" BorderBrush="#DDD"/>

                            <TextBlock Text="Staff Number" FontWeight="SemiBold" FontSize="14"/>
                            <TextBox x:Name="txtStaffNumber" Height="30" Margin="0,6,0,12" Padding="6" Background="#FAFAFA" BorderBrush="#DDD"/>

                            <TextBlock Text="Notes (optional)" FontWeight="SemiBold" FontSize="14"/>
                            <TextBox x:Name="txtNotes" Height="70" AcceptsReturn="True" TextWrapping="Wrap" Margin="0,6,0,0" 
                                     Padding="6" Background="#FAFAFA" BorderBrush="#DDD"/>
                        </StackPanel>

                       
                        <StackPanel Width="360">
                            <TextBlock Text="Hours Worked" FontWeight="SemiBold" FontSize="14"/>
                            <TextBox x:Name="txtHours" Height="30" Margin="0,6,0,12" Padding="6" Background="#FAFAFA" BorderBrush="#DDD"/>

                            <TextBlock Text="Hourly Rate (R)" FontWeight="SemiBold" FontSize="14"/>
                            <TextBox x:Name="txtRate" Height="30" Margin="0,6,0,12" Padding="6" Background="#FAFAFA" BorderBrush="#DDD"/>

                            <Button Content="Upload Supporting Document" Height="32" Background="#7B61FF" Foreground="White" FontWeight="SemiBold" 
                                    Cursor="Hand" Click="Upload_Click"/>
                            <TextBlock x:Name="txtUploadedFile" FontSize="12" Foreground="#374151" Margin="0,4,0,0"/>
                        </StackPanel>
                    </WrapPanel>

                   
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button x:Name="btnSubmit" Content="Submit Claim" Width="140" Height="36" Background="#4F46E5" Foreground="White" FontWeight="Bold" 
                                Cursor="Hand" Click="Submit_Click" Margin="0,0,12,0"/>
                        <Button Content="Save Draft" Width="120" Height="36" Background="#E5E7EB" Foreground="#374151" FontWeight="SemiBold" 
                                Cursor="Hand" Click="SaveDraft_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

     
            <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="12">
                <StackPanel>
                    <TextBlock Text="My Submitted Claims" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,6"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="200">
                        <ListBox x:Name="lstMyClaims" SelectionChanged="lstMyClaims_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Margin="0,2">
                                        <TextBlock Text="{Binding DisplayTitle}" FontWeight="Bold"/>
                                        <ProgressBar Minimum="0" Maximum="3" Height="14" Margin="0,2,0,0"
                                                     Value="{Binding Status, Converter={StaticResource StatusToProgressConverter}}"
                                                     Foreground="#4F46E5"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                    <TextBlock Text="(Select a claim to view or edit details)" FontStyle="Italic" Foreground="#6B7280" Margin="0,6,0,0"/>
                </StackPanel>
            </Border>

           
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                <Button Content="Back" Width="100" Height="32" Background="#4F46E5" Foreground="White" Click="Back_Click" Margin="0,0,12,0"/>
                <Button Content="Exit" Width="100" Height="32" Background="#EF4444" Foreground="White" Click="Exit_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
